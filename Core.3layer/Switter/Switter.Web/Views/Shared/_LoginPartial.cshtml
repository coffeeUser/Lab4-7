@using Microsoft.AspNetCore.Identity
@using Switter.Data.Contracts.Entities

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Tweet" asp-action="Index" id="userName">@UserManager.GetUserName(User)</a>
            </li>
            <li>
                <a asp-area="" asp-controller="User" asp-action="LogOut">Log Out</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="User" asp-action="Registration">Register</a></li>
        <li><a asp-area="" asp-controller="User" asp-action="Login">Log In</a></li>
    </ul>
}